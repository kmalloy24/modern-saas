{
	"name": "modern-saas",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"test": "playwright test",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"gen:types": "pnpx supabase gen types typescript --local > src/lib/supabase-types.ts && prettier --write src/lib/supabase-types.ts",
		"seed": "tsx --tsconfig scripts/tsconfig.json scripts/seed.ts"
	},
	"devDependencies": {
		"@faker-js/faker": "^7.6.0",
		"@playwright/test": "^1.33.0",
		"@sveltejs/adapter-auto": "^2.0.1",
		"@sveltejs/adapter-vercel": "^2.4.3",
		"@sveltejs/kit": "^1.16.2",
		"@types/detect-port": "^1.3.2",
		"@types/pg": "^8.6.6",
		"@typescript-eslint/eslint-plugin": "^5.59.2",
		"@typescript-eslint/parser": "^5.59.2",
		"autoprefixer": "^10.4.14",
		"detect-port": "^1.5.1",
		"eslint": "^8.40.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-svelte": "^2.27.3",
		"pg": "^8.10.0",
		"postcss": "^8.4.23",
		"postcss-load-config": "^4.0.1",
		"prettier": "^2.8.8",
		"prettier-plugin-svelte": "^2.10.0",
		"stripe-event-types": "^2.3.0",
		"supabase": "^1.55.1",
		"svelte": "^3.59.0",
		"svelte-check": "^3.3.1",
		"svelte-preprocess": "^5.0.3",
		"sveltekit-superforms": "^0.8.6",
		"tailwindcss": "^3.3.2",
		"tslib": "^2.5.0",
		"tsx": "^3.12.7",
		"typescript": "^5.0.4",
		"vite": "^4.3.5",
		"vitest": "^0.25.8",
		"zod": "^3.21.4"
	},
	"type": "module",
	"dependencies": {
		"@popperjs/core": "^2.11.7",
		"@supabase/auth-helpers-sveltekit": "^0.9.4",
		"@supabase/supabase-js": "^2.21.0",
		"classnames": "^2.3.2",
		"dotenv": "^16.0.3",
		"flowbite": "^1.6.5",
		"flowbite-svelte": "^0.34.12",
		"stripe": "^12.4.0",
		"svelte-french-toast": "1.0.4-beta.0"
	}
}
